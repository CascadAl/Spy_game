<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryDark">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSelectBtn" />
            <stroke android:width="5px" android:color="@color/colorCornerSelectBtn" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/colorSelectBtn"
                android:startColor="@color/colorSelectBtn"
                android:type="linear" />
            <stroke android:width="5px" android:color="@color/colorCornerSelectBtn" />
        </shape>
    </item>

</ripple>